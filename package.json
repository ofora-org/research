{
  "name": "fora-research",
  "version": "1.0.0",
  "description": "Survey site for fora project",
  "main": "next",
  "author": "Diogo Vianna",
  "license": "MIT",
  "dependencies": {
    "airtable": "^0.5.6",
    "babel-plugin-module-resolver": "^3.1.1",
    "body-parser": "^1.18.3",
    "cookie-parser": "^1.4.3",
    "cookies-js": "^1.2.3",
    "express": "^4.16.3",
    "isomorphic-unfetch": "^2.1.0",
    "next": "^5.1.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-input-mask": "^2.0.1",
    "react-swipeable": "^4.3.0",
    "recompose": "^0.26.0"
  },
  "devDependencies": {
    "now": "^11.1.7"
  },
  "scripts": {
    "dev": "node server.js",
    "build": "next build",
    "start": "NODE_ENV=production node server.js",
    "pretest": "eslint --ignore-path/ .gitignore .",
    "deploy": "now -e NODE_ENV=production -e AIRTABLE_API_KEY=$AIRTABLE_API_KEY --token $NOW_TOKEN --npm --public -T ofora",
    "alias": "now alias pesquisa-ofora-org-$TRAVIS_PULL_REQUEST_BRANCH$TRAVIS_BRANCH --token=$NOW_TOKEN -T ofora",
    "deploy:prod": "now -e NODE_ENV=production -e AIRTABLE_API_KEY=$AIRTABLE_API_KEY --token $NOW_TOKEN --npm",
    "alias:prod": "now alias pesquisa.ofora.org --token=$NOW_TOKEN"
  },
  "now": {
    "name": "pesquisa-ofora-org",
    "alias": [
      "pesquisa-ofora-org"
    ],
    "env": {
      "NODE_ENV": "production"
    }
  },
  "babel": {
    "presets": [
      "next/babel"
    ],
    "plugins": [
      [
        "module-resolver",
        {
          "root": [
            "./"
          ]
        }
      ]
    ]
  }
}
